<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mid_term_exam.login_activity">

   <ImageView
       android:layout_width="match_parent"
       app:layout_heightPercent = "41%"
       android:background="@drawable/login"
       />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10sp">

      <Button
          android:id="@+id/finish"
          android:layout_width="15sp"
          android:layout_height="25sp"
          android:background="@mipmap/back"
          android:layout_marginLeft="15sp"
          android:layout_gravity="center"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_weight="3"
          android:layout_height="match_parent" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="登陆"
          android:textSize="20sp"
          android:layout_gravity="center"
          android:textColor="#ffffff"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_weight="3"
          android:layout_height="match_parent" />
      <TextView
          android:layout_width="15sp"
          android:layout_height="25sp"
          android:layout_marginRight="15sp"/>

   </LinearLayout>

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_marginTopPercent="14%">
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/logo"
          android:layout_gravity="center"/>
   </LinearLayout>



   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       app:layout_heightPercent = "38%"
       android:layout_marginLeft="26sp"
       android:layout_marginRight="26sp"
       app:layout_marginTopPercent="36%"
       >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <EditText
             android:id="@+id/number"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="25sp"
             android:layout_marginLeft="22sp"
             android:layout_marginRight="22sp"
             android:textCursorDrawable="@drawable/cusor"
             android:hint="请输入学号"/>

         <EditText
             android:id="@+id/six"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10sp"
             android:inputType="numberPassword"
             android:layout_marginLeft="22sp"
             android:layout_marginRight="22sp"
             android:hint="请输入身份证后六位"/>

         <Button
             android:id="@+id/login"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="登陆"
             android:textSize="21sp"
             android:textColor="#ffffff"
             android:background="@drawable/loginbutton"
             android:layout_marginLeft="22sp"
             android:layout_marginRight="22sp"
             android:layout_marginTop="25sp"/>

      </LinearLayout>

   </android.support.v7.widget.CardView>


</android.support.percent.PercentRelativeLayout>
